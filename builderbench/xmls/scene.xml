<mujoco model="scene">
  <include file="2f85.xml"/>

  <option integrator="implicitfast"/>

  <statistic center="0.3 0 0.4" extent="1"/>
  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
    <scale contactwidth="0.075" contactheight="0.025" forcewidth="0.05" com="0.05" framewidth="0.01" framelength="0.2"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.01 0.01 0.35" rgb2="0.9 0.5 0.4" width="512" height="512" mark="random" markrgb="1 1 1" random="0.005"/>

    <texture type="2d" name="groundplane" builtin="checker" mark="cross" rgb1="0.1 0.2 0.3" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="1024" height="1024"/>

    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="1 1" reflectance="0.1"/>
  </asset>

  <worldbody>
      <light pos="0 0 1" dir="0 0 -1" directional="true"/>      
      <geom name="floor" size="2 4 0.01" type="plane" material="groundplane" contype="1"/>
  </worldbody>
</mujoco>